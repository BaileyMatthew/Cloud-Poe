@model string

@{
    ViewData["Title"] = "Queue Management";
}

<h1>Queue Management</h1>

<p>
    
</p>

<hr />

<h4>Send a Message to the Queue</h4>
<div class="row">
    <div class="col-md-6">
        <form asp-action="EnqueueMessage" method="post">
            <div class="form-group">
                <label for="message" class="control-label">Message Content</label>
                <input name="message" class="form-control" required />
            </div>
            <div class="form-group">
                <input type="submit" value="Send to Queue" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<hr />

<h4>Process Next Message</h4>
<div class="row">
    <div class="col-md-6">
        <form asp-action="DequeueMessage" method="post">
            <button type="submit" class="btn btn-success">Get Next Message</button>
        </form>
        @if (!string.IsNullOrEmpty(Model))
        {
            <div class="alert alert-info mt-3" role="alert">
                <strong>Message Processed:</strong> @Model
            </div>
        }
    </div>
</div>